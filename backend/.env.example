# Django Environment Configuration
# Copy this file to .env.development, .env.production, .env.staging, or .env.test
# and fill in the appropriate values for your environment.
#
# Set DJANGO_ENV environment variable to one of: development, production, staging, test
# Example: export DJANGO_ENV=development

# ==================== REQUIRED SETTINGS ====================

# Django Secret Key (REQUIRED)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug Mode (REQUIRED)
# Set to True for development, False for production
DEBUG=True

# ==================== DATABASE CONFIGURATION ====================

# Database Name (REQUIRED)
DB_NAME=leopard_db

# Database User (REQUIRED)
DB_USER=postgres

# Database Password (REQUIRED)
DB_PASSWORD=your-db-password-here

# Database Host (REQUIRED)
DB_HOST=localhost

# Database Port (REQUIRED)
DB_PORT=5432

# ==================== DOMAIN CONFIGURATION ====================

# FLATTENED SUBDOMAIN ARCHITECTURE (Cloudflare Free SSL Compatible)
# Pattern: tenant-app.company.com (instead of tenant.app.company.com)
# Example: acme-immigrate.logiclucent.in
#
# Why flattened? Cloudflare Free Universal SSL only supports one level of 
# subdomains (*.logiclucent.in), not nested subdomains (*.*.logiclucent.in).

# Application Subdomain (e.g., 'immigrate' for tenant-immigrate.company.com)
APP_SUBDOMAIN=immigrate

# Base Domain (e.g., 'localhost' for dev, 'company.com' for production)
BASE_DOMAIN=localhost

# ==================== TASK & NOTIFICATION SETTINGS ====================

# Default days for "due soon" tasks
TASKS_DUE_SOON_DEFAULT_DAYS=3

# Include overdue tasks by default (true/false)
TASKS_INCLUDE_OVERDUE_DEFAULT=true

# Include read notifications by default (true/false)
NOTIFICATIONS_INCLUDE_READ_DEFAULT=true

# Allowed origin for notification stream (use * for development)
NOTIFICATION_STREAM_ALLOWED_ORIGIN=*
